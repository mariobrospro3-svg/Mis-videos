  <script>
    function activarSonido() {
      const audio = document.getElementById("bgmusic");
      audio.play().then(() => {
        document.getElementById("btn-sonido").style.display = "none";
      }).catch(err => {
        alert("Toca la pantalla para activar el audio ðŸ“±ðŸŽ¶");
      });
